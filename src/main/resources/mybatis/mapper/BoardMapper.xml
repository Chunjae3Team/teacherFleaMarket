    </insert>
    <insert id="marketInsertWritePdt" parameterType="dto.BoardDTO">
        INSERT
        INTO product(price, status, deal_address, prd_type, brd_id)
        SELECT #{price}, '거래중', #{dealAddress}, #{prdType}, brd_id
            FROM board
            ORDER BY brd_id
            DESC LIMIT 1;
    </insert>

